perlcode my ($month, $day, $time, $host_name, @message) = split(/\s+/);

watchfor /exited/
        exec echo "Subject:SWATCH Found An Exited Container On $host_name\n\n$_\n" | sendmail "False"

ignore /404|Rendered/

watchfor /error|ERROR/
        exec /usr/local/bin/slack-swatch.sh '$_'
        threshold track_by=message, type=limit, count=2, seconds=240
