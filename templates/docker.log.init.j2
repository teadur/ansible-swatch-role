#!/bin/bash

start()
{
/usr/bin/swatch --config-file=/etc/swatch/docker.log.conf --tail-file=/var/log/docker.log --pid-file=/var/run/swatch-docker.pid --daemon > /dev/null >&1
}

stop()
{
PID=`cat /var/run/swatch-docker.pid`
kill $PID
}

case $1 in
start)
start
exit 0
;;
stop)
stop
exit 0
;;
restart)
stop
sleep 2
start
exit 0
;;
*)
echo "Usage: $0 { start | stop | restart }"
exit 1
;;
esac
